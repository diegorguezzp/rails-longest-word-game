<h1 class="sty"> New Game</h1>
<% @str.each do |letter| %>
    <div class="letter"><%=letter%></div>
<% end %>

  <form class="form" action="score" method="post" data-turbo="false">
    <input type="text" name="guess">
    <input type="submit" value="Play!">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :str_value, @str.join %>
  </form>
